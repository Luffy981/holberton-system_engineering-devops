#!/usr/bin/env bash
#install Nginx web server

SU=$(whoami)

if [[ "$SU" == "root" ]];
then
	SU="sudo"
else
	SU=""
fi

$SU apt-get update
$SU apt-get -y install nginx
$SU rm /var/www/html/*
$SU chown -R ubuntu /var/www
$SU echo "Hello World" > /var/www/html/index.nginx-debian.html
$SU service nginx restart
